{
    "compilerOptions": {
      "outDir": "build/",
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "newLine": "LF",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "pretty": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "client/**/*",
      "components/**/*",
      "server/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "dom"
    ],
    "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2
    }
}